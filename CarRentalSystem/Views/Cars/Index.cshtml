@model IEnumerable<CarRentalSystem.Models.Cars>
@{
    int id = 1000;
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

<div class="container py-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center py-3">
            <h2 class="mb-0">Car List</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered caption-top mb-0">

                    <thead class="table-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Car Brand</th>
                            <th scope="col">Car Model</th>
                            <th scope="col">Number Plate</th>
                            <th scope="col">Rent Per Day</th>
                            <th scope="col">IsAvailable</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@id</th>
                                <td>@item.Brand</td>
                                <td>@item.Model</td>
                                <td>@item.NumberPlate</td>
                                <td>@item.RentPerDay</td>
                                <td>
                                  @(item.IsAvailable? "Available": "Not Available")

                                </td>
                                <td class="text-center">
                                    <a asp-controller="Cars" asp-action="Edit" asp-route-id="@id" class="btn btn-sm btn-outline-primary me-1" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                    <a sp-controller="Cars" asp-action="Delete" asp-route-id="@id" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                            id++;
                        }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
